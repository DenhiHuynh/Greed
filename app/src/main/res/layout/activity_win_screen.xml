<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context="se.umu.dehu0004.greed.WinScreenActivity">

    <TextView
        android:id="@+id/congratsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Congratulations, \nyou've won!"
        android:textSize="30sp" />

    <TextView
        android:layout_below="@id/congratsText"
        android:id="@+id/winText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:textSize="30sp" />

    <TextView
        android:layout_below="@id/winText"
        android:id="@+id/roundsWonText"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="120sp"
        android:background="@drawable/textview_round"/>

    <TextView
        android:layout_below="@id/roundsWonText"
        android:id="@+id/roundsWonText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_gravity="right"
        android:textSize="30sp" />
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_unselected"
        android:onClick="startNewGame"
        android:text="Start new game" />

</RelativeLayout>
